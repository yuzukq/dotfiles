# --- 見た目・フォント ---
{{- if eq .chezmoi.os "darwin" }}
font-size = 16
{{- else }}
font-size = 14
{{- end }}
adjust-cell-height = 10%
# フォントファミリー
font-family = Maple Fonts Noto NF
font-style = Bold

# テーマ
theme = Material Design Colors

# 装飾
# 赤系のアクセントカラー
palette = 1=#ff5555
palette = 9=#ff6e67

# ピンク/赤系の強調色
palette = 5=#ff79c6
palette = 13=#ff92d0

# ウィンドウの装飾
window-decoration = true

# アニメーション
quick-terminal-animation-duration = 0.3

# --- ウィンドウ・透明度 ---
# 背景を透過させてブラー（すりガラス効果）を入れる
background-opacity = 0.90
background-blur-radius = 20

# ウィンドウ内の余白を入れて圧迫感を減らす
window-padding-x = 14
window-padding-y = 14
window-padding-balance = true

# 入力中はマウスカーソルを隠す
mouse-hide-while-typing = true
{{ if eq .chezmoi.os "darwin" }}
# --- Macネイティブな挙動 ---
macos-titlebar-style = transparent
macos-window-shadow = true
{{ end }}
# --- 操作性 ---
# 選択しただけでクリップボードにコピー
copy-on-select = true
# クリップボードの読み書きを許可
clipboard-read = allow
clipboard-write = allow

# --- キーバインド設定（画面分割） ---
{{- $mod := "ctrl" }}
{{- if eq .chezmoi.os "darwin" }}
{{- $mod = "cmd" }}
{{- end }}
# {{ $mod }}+Enter で「下に」分割
keybind = {{ $mod }}+enter=new_split:down
# {{ $mod }}+Shift+Enter で「右に」分割
keybind = {{ $mod }}+shift+enter=new_split:right
# {{ $mod }} + 矢印キー で分割した画面を「移動」
keybind = {{ $mod }}+left=goto_split:left
keybind = {{ $mod }}+right=goto_split:right
keybind = {{ $mod }}+up=goto_split:top
keybind = {{ $mod }}+down=goto_split:bottom
# {{ $mod }} + Shift + 矢印キー でサイズを「調整」
keybind = {{ $mod }}+shift+left=resize_split:left,20
keybind = {{ $mod }}+shift+right=resize_split:right,20
keybind = {{ $mod }}+shift+up=resize_split:up,20
keybind = {{ $mod }}+shift+down=resize_split:down,20

# {{ $mod }} + W で現在の「ペイン（分割）」を閉じる
keybind = {{ $mod }}+w=close_surface

# --- カーソルシェーダー（初音ミクテーマ） ---
# ミクカラーのデジタル残像トレイル（カーソル移動時）
custom-shader = shaders/miku_cursor_trail.glsl
# ミクカラーのデジタルパルス波紋（insert/normalモード切替時）
custom-shader = shaders/miku_digital_ripple.glsl
# フォーカスが外れてもアニメーションを継続
custom-shader-animation = always
